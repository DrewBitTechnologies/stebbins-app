{
  "name": "stebbins-app-testing",
  "version": "1.0.0",
  "description": "Testing suite for Stebbins app API contexts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:fast": "jest --config=config/jest.fast.config.js",
    "test:api": "jest --config=config/jest.api.config.js",
    "test:ui": "jest --config=config/jest.ui.config.js",
    "test:build": "jest --config=config/jest.build.config.js --runInBand --detectOpenHandles",
    "test:integration": "jest --config=config/jest.api.config.js --testPathPattern=integration",
    "test:unit": "jest --config=config/jest.fast.config.js",
    "test:real-api": "NODE_ENV=test jest api/real/ --runInBand",
    "audit:security": "npm audit --audit-level moderate",
    "audit:dependencies": "npx npm-check-updates --doctor"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/react-native": "^12.4.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.2.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-expo": "^51.0.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-test-renderer": "19.0.0",
    "ts-jest": "^29.1.0"
  },
  "peerDependencies": {
    "react": "19.0.0",
    "react-native": "0.79.5"
  }
}
